{% extends 'layout.twig' %}

{% set title = 'Prijava'  %}
{% block title %}{{ title }}{% endblock %}

{% block content %}

    <div style="padding-top: 40px; padding-bottom: 40px; background-color: #2f2f2f; width: 100%; height: 100%; position: absolute; top: 0; left: 0;">

        <!-- preloader -->
        <div id="preloader-first">
            <div class="loading-container">
                    <div class="loading2">
                            <img src="{{ constant('APPASSETS') }}/img/cgp/preloader.png" class="preloader-img" alt="veresis crm"/>
                            <div class="loader"></div>
                    </div>
            </div>
        </div>

        <div class="container">
            <a href="http://kig.si/"><img src="{{ constant('APPASSETS') }}/img/cgp/logo.png" class="logo" alt="kig" /></a>

            <form class="form-signin" method="post" action="prijava">
                <h2 class="form-signin-heading">Prijava</h2>

            {% if flash %}<p class="signin">{{ flash|raw }}</p>{% endif %}
            {% if errors %}
                <p class="signin">Napaka pri prijavi v aplikacijo</p>
                {% for error in errors %}
                    <p class="signin">{{ error }}</p>
                {% endfor %}
            {% endif %}

                <input type="text" id="username" name="username" class="form-control" placeholder="uporabniško ime" required>

                <input type="password" id="password" name="password" class="form-control" placeholder="geslo" required>

                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="chkRemember" name="chkRemember" value="zapomni-si"> zapomni si prijavo
                    </label>
                </div>

                <input type="hidden" name="csrf_name" value="{{ csrf.name }}">
                <input type="hidden" name="csrf_value" value="{{ csrf.value }}">
                <input type="hidden" name="retUrl" value="{{ retUrl }}">

                <button class="btn btn-primary prijava" type="submit">vstopi</button>

            </form> 
            
            <p class="signin">Ta aplikacija je namenjena naročnikom registrskih tablic.</p>
            <p class="signin">Ste pozabili geslo? Kliknite <a href="{{ constant('APPBASEURL')}}pozabljeno-geslo">tukaj</a>.</p>
            <p class="signin">Če imate težave z dostopom se obrnite na mail: <a href="mailto:info@kig.si">info@kig.si</a></p>

        </div>
    </div>
        


{% endblock %}